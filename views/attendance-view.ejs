<!DOCTYPE html>
<html>

<head>
    <title>Attendance Records</title>
    <style>
        body {
            font-family: Arial;
            margin: 20px;
        }

        table {
            border-collapse: collapse;
            width: 100%;
            margin-top: 20px;
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background: #f4f4f4;
        }

        .date-header {
            background: #e3f2fd;
            font-weight: bold;
        }
    </style>
</head>

<body>
    <h2>Attendance Records</h2>
    <a href="/dashboard">‚Üê Back to Dashboard</a>

    <table>
        <tr>
            <th>Date</th>
            <th>Student ID</th>
            <th>Time</th>
        </tr>
        <% let currentDate='' ; attendance.forEach(record=> {
            const date = new Date(record.session_date).toLocaleDateString();
            if (date !== currentDate) {
            currentDate = date;
            %>
            <tr class="date-header">
                <td colspan="3">
                    <%= date %>
                </td>
            </tr>
            <% } %>
                <tr>
                    <td></td>
                    <td>
                        <%= record.student_id %>
                    </td>
                    <td>
                        <%= new Date(record.timestamp).toLocaleTimeString() %>
                    </td>
                </tr>
                <% }); %>
    </table>
</body>

</html>